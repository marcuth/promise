{
  "name": "@marcuth/promise",
  "description": "A simple, lightweight utility to handle Promises in TypeScript without repetitive `try/catch` blocks. Inspired by Go's error handling pattern.",
  "version": "0.1.0",
  "type": "commonjs",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist/*",
    "!/**/__tests__"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "ts-node ./src/index.ts",
    "format": "prettier --write \"src/**/*.ts\" \"__tests__/**/*.ts\" jest.config.ts",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "marcuth",
    "promise",
    "typescript",
    "utility",
    "error-handling"
  ],
  "author": "Marcuth",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^25.3.0",
    "eslint": "^10.0.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "jest": "^30.2.0",
    "prettier": "^3.8.1",
    "prettier-plugin-sort-imports": "^1.8.11",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/marcuth/promise.git"
  },
  "bugs": {
    "url": "https://github.com/marcuth/promise/issues"
  },
  "homepage": "https://github.com/marcuth/promise",
}